{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "paths": {
      "@db/*": ["./src/db/*"],
      "@services/*": ["./src/services/*"],
      "@types": ["./src/types"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
